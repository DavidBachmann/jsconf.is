block append vars
  - path = '/speakers';
  - blurb = 'First 3 speakers announced'

block icon
  include ../../images/call.svg

block title
  | Speakers

block content
  -
    speakers = [{
      name: 'Raquel VÃ©lez',
      twitter: 'rockbot',
      website: 'https://rckbt.me/',
      description: 'Senior Software Developer at npm, Inc. She studied Mechanical Engineering at Caltech and worked as a roboticist for 8 years.'
    }, {
      name: 'Lin Clark',
      twitter: 'linclark',
      website: 'http://lin-clark.com/',
      description: 'Senior Engineer on Firefox developer tools. She is a code cartoonist; she stuffs her head full of coding minutiae and then turns it into <a href="https://twitter.com/codecartoons" target="_blank">@codecartoons</a>.'
